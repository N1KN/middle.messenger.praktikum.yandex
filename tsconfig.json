{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },

  "exclude": ["dist", "node_modules"],
  "include": [
    "src", "src/types/custom.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}
