.DialogArea {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
  overflow-y: hidden;

  &_isEmpty {
    align-items: center;
    color: var(--text-secondary-color);
    font-size: 13px;
    line-height: 13px;
  }

  &-header {
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--color-bg-border);
    position: sticky;
    top: 0;
  }

  &-chatMenu_isShown ~ &-chatMenuWrapper {
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 100;
    justify-content: center;
    align-items: center;
    display: block;
    position: absolute;
  }

  &-chatMenu-hiddenOverlay {
    cursor: no-drop;
    background-color: var(--color-bg-invert);
    opacity: 0;
    width: 100%;
    height: 100%;
  }

  &-chatMenu {
    z-index: 200;
    display: none;
    top: 75px;
    right: 10px;
    box-shadow: var(--block-shadow);
    color: var(--text-invert-color);
    background-color: var(--color-bg-default);
    border-radius: 12px;
    padding: 15px;
    position: absolute;

    &_isShown {
      display: flex;
    }

    &-list {
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
    }

    &-item {
      margin-bottom: 8px;
      list-style: none;
    }
  }

  &-title {
    display: flex;
    flex-direction: row;
    gap: 10px;
    margin-left: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  &-messagesWrapper {
    height: 100%;
    flex-direction: column;
    flex-grow: 1;
    margin: 0;
    padding: 0 10px;
    display: flex;
    overflow-y: auto;
  }

  &-messages {
    display: flex;
    flex-direction: column;
  }

  &-footer {
    background-color: var(--color-bg-default);
    z-index: 2;
    padding-top: 11px;
    border-top: 1px solid var(--color-bg-border);
    position: sticky;
    bottom: 0;
  }

  &-menuButton {
    width: auto !important;
  }
}
