.InternalErrorPage {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  &-title {
    font-size: 40px;
    color: var(--text-primary-color);
    font-weight: 500;
    line-height: 40px;
    margin: 0 0 20px;
  }

  &-subtitle {
    font-size: 20px;
    color: var(--text-primary-color);
    font-weight: 500;
    line-height: 20px;
    text-align: center;
    max-width: 180px;
    margin: 0 0 69px;
  }
}
